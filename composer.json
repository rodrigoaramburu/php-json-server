{
    "name": "rodrigoaramburu/php-json-server",
    "type": "library",
    "description": "Biblioteca para criar uma API Rest fake para prototipação de front-end",
    "license":"MIT",
    "autoload": {
        "psr-4": {
            "JsonServer\\": "src/"
        }
    },
    "autoload-dev": {
        "files": [
            "tests/helpers.php"
        ]
    },
    "authors": [
        {
            "name": "Rodrigo Aramburu",
            "email": "rodrigoaramburu@gmail.com"
        }
    ],
    "require-dev": {
        "laravel/pint": "^1.1",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-mock": "^1.0"
    },
    "require": {
        "php": ">8.0",
        "nyholm/psr7": "^1.5",
        "doctrine/inflector": "^2.0",
        "minicli/minicli": "^3.2",
        "fakerphp/faker": "^1.20"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "bin":["bin/json-server"],
    "scripts": {
        "lint": "./vendor/bin/pint --preset=psr12",
        "test": "./vendor/bin/pest",
        "coverage": "XDEBUG_MODE=coverage ./vendor/bin/pest --coverage-html coverage"
    }
}
